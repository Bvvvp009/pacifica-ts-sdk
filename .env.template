# Pacifica TypeScript SDK - Environment Variables Template
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================================================
# REQUIRED: Authentication
# ============================================================================

# Your private key (hex format, 128 characters, or base64)
# This is used for signing transactions and authenticating API requests
# Format: 64-byte hex string (128 chars) or base64 encoded
# Example: "2Z2Wn4kN5ZNhZzuFTQSyTiN4ixX8U6ew5wPDJbHngZaC3zF3uWNj4dQ63cnGfXpw1cESZPCqvoZE7VURyuj9kf8b"
PRIVATE_KEY=

# Account public key (optional, will be derived from private key if not provided)
# Format: hex string (64 characters)
ACCOUNT_PUBLIC_KEY=

# ============================================================================
# OPTIONAL: Agent Wallet (API Agent Keys)
# ============================================================================

# Main account public key (required for agent wallet trading)
# This is your main account that has the funds
# Format: hex string (e.g., "dev1S2tC8CSZXzTQzVacYvkqWwD37dTqiCKaeJCWhwM")
MAIN_ACCOUNT_PUBLIC_KEY=

# Agent wallet private key (required for agent wallet trading)
# This is the private key of the API Agent Key registered to your account
# Format: base58 string (same format as PRIVATE_KEY)
# Note: You must bind the agent wallet to your account first
API_PRIVATE_KEY=
U
# Agent wallet public key (optional, will be derived from API_PRIVATE_KEY if not provided)
# Format: hex string
AGENT_WALLET_PUBLIC_KEY=

# ============================================================================
# OPTIONAL: API Endpoints
# ============================================================================

# REST API base URL
# Mainnet (default): https://api.pacifica.fi
# Testnet: https://test-api.pacifica.fi
PACIFICA_REST_URL=https://api.pacifica.fi

# WebSocket API URL
# Mainnet (default): wss://ws.pacifica.fi/ws
# Testnet: wss://test-ws.pacifica.fi/ws
PACIFICA_WS_URL=wss://ws.pacifica.fi/ws

# API version (optional, defaults to v1)
API_VERSION=v1

# ============================================================================
# OPTIONAL: Solana Configuration
# ============================================================================

# Solana RPC endpoint for on-chain operations (deposits, etc.)
# Mainnet (default): https://api.mainnet-beta.solana.com
# Testnet: https://api.testnet.solana.com
# Devnet: https://api.devnet.solana.com
# Or use a custom RPC provider like Helius, QuickNode, etc.
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Solana commitment level for transactions
# Options: processed, confirmed, finalized (default: confirmed)
SOLANA_COMMITMENT=confirmed

# ============================================================================
# OPTIONAL: Request Configuration
# ============================================================================

# Request timeout in milliseconds (default: 30000 = 30 seconds)
REQUEST_TIMEOUT=30000

# Signature expiry window in seconds (default: 300 = 5 minutes)
# This determines how long a signed request remains valid
SIGNATURE_EXPIRY_WINDOW=300

# ============================================================================
# OPTIONAL: WebSocket Configuration
# ============================================================================

# Enable WebSocket auto-reconnection (default: true)
WS_AUTO_RECONNECT=true

# WebSocket reconnect interval in milliseconds (default: 5000 = 5 seconds)
WS_RECONNECT_INTERVAL=5000

# Maximum WebSocket reconnect attempts (default: 10)
WS_MAX_RECONNECT_ATTEMPTS=10

# ============================================================================
# OPTIONAL: Hardware Wallet Configuration
# ============================================================================

# Hardware wallet path (for Ledger devices)
# Format: "usb://ledger?key=1" or similar
# Only needed if using hardware wallet signing
HARDWARE_WALLET_PATH=

# ============================================================================
# OPTIONAL: Environment Selection
# ============================================================================

# Environment: mainnet, testnet, or devnet
# This can be used to automatically set URLs based on environment
ENVIRONMENT=mainnet

# ============================================================================
# USAGE EXAMPLES
# ============================================================================

# Example 1: Regular Trading (Direct Account)
# PRIVATE_KEY=your_account_private_key_base58
# ENVIRONMENT=mainnet

# Example 2: Agent Wallet Trading
# MAIN_ACCOUNT_PUBLIC_KEY=your_main_account_public_key
# API_PRIVATE_KEY=your_agent_wallet_private_key
# ENVIRONMENT=mainnet

# Example 3: Testnet configuration
# PRIVATE_KEY=your_testnet_private_key_here
# ENVIRONMENT=testnet
# PACIFICA_REST_URL=https://test-api.pacifica.fi
# PACIFICA_WS_URL=wss://test-ws.pacifica.fi/ws
# SOLANA_RPC_URL=https://api.testnet.solana.com

# Example 4: Using Agent Wallet with Custom RPC
# MAIN_ACCOUNT_PUBLIC_KEY=your_main_account_public_key
# API_PRIVATE_KEY=your_agent_wallet_private_key
# SOLANA_RPC_URL=https://your-custom-rpc-provider.com

# Example 5: Hardware wallet
# PRIVATE_KEY=your_main_account_private_key
# HARDWARE_WALLET_PATH=usb://ledger?key=1
